{{$context := .}}
{{$result := .Result}}
{{$allowed_actions := (allowed_actions $context.Resource.Actions $context.Action)}}
{{$resource := .Resource}}

{{if gt (len $allowed_actions) 0 }}
  <div class="qor-action-bulk-edit" data-toggle="qor.action.bulk">
    <div class="qor-action-forms hidden">
      {{range $action := $allowed_actions}}
        {{if (and $action.URL (eq $action.Method "GET"))}}
          <a class="mdl-button mdl-button--colored mdl-button--raised qor-action-button qor-action-button--link" href="{{call $action.URL $result $context}}">
            {{t (printf "%v.actions.%v" $resource.I18nPrefix $action.Label) $action.Label}}
          </a>
        {{else}}
          <button class="mdl-button mdl-button--colored mdl-button--raised qor-action-button" type="button"
            data-url="{{if $action.URL}}{{call $action.URL $result $context}}{{else}}{{join_url (url_for $resource) "!action" $action.ToParam}}{{end}}"
            data-error-no-item="{{t "github_com:ecletus:admin.actions.please_select_an_item"}}"
            {{if not $action.Resource}}data-dataType="json"
              data-ajax-form="true"
              data-from-index="true"
              data-confirm="{{t "github_com:ecletus:admin.form.are_you_sure"}}"
              data-confirm-ok="{{t "github_com:ecletus:admin.form.confirm.button.ok"}}" data-confirm-cancel="{{t "github_com:ecletus:admin.form.confirm.button.cancel"}}"
              data-method="{{$action.Method}}"
              {{if $action.ReturnURL}}data-return-url="{{call $action.ReturnURL $result $context}}"{{end}}
              {{if $action.RefreshURL}}data-refresh-url="{{call $action.RefreshURL $result $context}}"{{end}}
            {{end}}>
            {{t (printf "%v.actions.%v" $resource.I18nPrefix $action.Label) $action.Label}}
          </button>
        {{end}}
      {{end}}
    </div>

    <div class="qor-action-bulk-buttons">
      <button class="mdl-button mdl-button--colored qor-action--bulk" type="button">{{t "github_com:ecletus:admin.actions.bulk_edit"}}</button>
      <button class="mdl-button mdl-button--accent qor-action--exit-bulk hidden" type="button">{{t "github_com:ecletus:admin.actions.exit_bulk_edit"}}</button>
    </div>
  </div>
{{end}}
