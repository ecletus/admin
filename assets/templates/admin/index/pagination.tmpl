{{ $paginationResult := pagination }}
{{ if $paginationResult }}
  <nav class="qor-pagination-container">
    {{range $index, $page := $paginationResult.Pages}}
      {{if $page.IsFirst }}
        <a class="qor-pagination-first" href="{{patch_current_url "page" $page.Page}}" title="{{t "github_com:aghape:admin.pagination.first"}}" aria-label="{{t "github_com:aghape:admin.pagination.first"}}">{{t "github_com:aghape:admin.pagination.first"}}</a>
      {{end}}
    {{end}}

    <ul class="qor-pagination">
      {{range $index, $page := $paginationResult.Pages}}
        {{if $page.IsPrevious}}
          <li class="qor-pagination-item qor-pagination-previous">
            <a href="{{patch_current_url "page" $page.Page}}" title="{{t "github_com:aghape:admin.pagination.previous"}}" aria-label="{{t "github_com:aghape:admin.pagination.previous"}}"><i class="material-icons">&#xE408;</i></a>
          </li>
        {{else if $page.IsNext}}
          <li class="qor-pagination-item qor-pagination-next">
            <a href="{{patch_current_url "page" $page.Page}}" title="{{t "github_com:aghape:admin.pagination.next"}}" aria-label="{{t "github_com:aghape:admin.pagination.next"}}"><i class="material-icons">&#xE409;</i></a>
          </li>
        {{else if $page.Current}}
          <li class="qor-pagination-item active"><a href="{{patch_current_url "page" $page.Page}}">{{$page.Page}}</a></li>
        {{else if not (or $page.IsFirst $page.IsLast) }}
          <li class="qor-pagination-item"><a href="{{patch_current_url "page" $page.Page}}">{{$page.Page}}</a></li>
        {{end}}
      {{end}}
    </ul>

    {{range $index, $page := $paginationResult.Pages}}
      {{if $page.IsLast }}
        <a class="qor-pagination-last" href="{{patch_current_url "page" $page.Page}}" title="{{tt "github_com:aghape:admin.pagination.page_num" $paginationResult.Pagination }}" aria-label="{{t "github_com:aghape:admin.pagination.last"}}">{{t "github_com:aghape:admin.pagination.last"}}</a>
      {{end}}
    {{end}}

    <div class="qor-actions" data-toggle="qor.filter">
      <select class="qor-action--select" data-toggle="qor.selector" data-position="bottom" data-hover="true" data-clearable="false" name="per_page"
              {{ if eq 20 $paginationResult.Pagination.PerPage }}
                placeholder="{{t "github_com:aghape:admin.pagination.20_entries"}}"
              {{ else if eq 50 $paginationResult.Pagination.PerPage }}
                placeholder="{{t "github_com:aghape:admin.pagination.50_entries"}}"
              {{ else if eq 100 $paginationResult.Pagination.PerPage }}
                placeholder="{{t "github_com:aghape:admin.pagination.100_entries"}}"
              {{ else }}
                placeholder="{{t "github_com:aghape:admin.pagination.show_all"}}"
              {{ end }} >
        <option value="20">{{t "github_com:aghape:admin.pagination.20_entries"}}</option>
        <option value="50">{{t "github_com:aghape:admin.pagination.50_entries"}}</option>
        <option value="100">{{t "github_com:aghape:admin.pagination.100_entries"}}</option>
        <option value="-1">{{t "github_com:aghape:admin.pagination.show_all"}}</option>
      </select>
    </div>
  </nav>
{{ end }}
